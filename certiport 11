class person:
    def __init__(self,name):
        self.name = name
n = person("Emma")
print(n.name)
class Student:
    def __init__(self,name,age,subject):
        self.name  = name
        self.age = age
        self.subject = subject
    def __str__(self):
        return f"Student(name) = {self.name},age ={self.age}, subject = {self.subject}"
    def study(self):
        return f"{self.name} is studying {self.subject}"
s = Student("Maxim",18,"math")
print(s)
print(s.study())




