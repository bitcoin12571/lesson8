from pydoc import describe


class Person:
    def __init__(self,name ):
        self.name  = name
class Student(Person):
    def __init__(self, name ,subject ):
        super().__init__(name)
        self.subject = subject
s = Student("Maxim","math")
p = Person("Allow")
print(s.name)
print(p.name)


class dog:
    def speak(self):
        return"bark"
class cat:
    def speak(self):
        return "miau"
class birds:
    def speak(self):
        return "chahr"
animals =[ dog(),cat(),birds()]
for i in animals:
    print(i.speak())



class car:
    def __init__(self,speed,name ):
        self.speed = speed
        self.name = name
c = car(150,"Toyota")
print(f"{c.name} is speeding {c.speed}at a hour")

